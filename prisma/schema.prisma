generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model assistidos {
  id        Int         @id @default(autoincrement())
  nome      String
  documento String
  retiradas retiradas[]
}

model estoque {
  id               Int                @id @default(autoincrement())
  quantidade       Int
  descricao        String?            @db.VarChar(255)
  data_atualizacao DateTime?          @default(now()) @db.Timestamp(6)
  retirada_estoque retirada_estoque[]
}

model retirada_estoque {
  id                  Int       @id @default(autoincrement())
  retirada_id         Int
  quantidade_retirada Int
  estoque_id          Int
  data_retirada       DateTime? @default(now()) @db.Timestamp(6)
  estoque             estoque   @relation(fields: [estoque_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  retiradas           retiradas @relation(fields: [retirada_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model retiradas {
  id               Int                @id @default(autoincrement())
  assistido_id     Int
  data_retirada    DateTime           @db.Timestamptz(6)
  retirada_estoque retirada_estoque[]
  assistidos       assistidos         @relation(fields: [assistido_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_assistido")
}
